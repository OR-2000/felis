[parser]
  polyglot_parsing_enabled = true
  default_build_file_syntax = SKYLARK

[cache]
  mode =

[base]
  base_cxxflags = -std=c++17 -pthread -Wstrict-aliasing -DCACHE_LINE_SIZE=64
  base_cflags = -pthread -Wstrict-aliasing -DCACHE_LINE_SIZE=64

[cxx]
  cxxflags = -g -Og $(config base.base_cxxflags)
  cflags = -g -Og $(config base.base_cflags)
  ldflags = -g -Og

[cxx#release]
  cxxflags = -Ofast -flto -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer $(config base.base_cxxflags)
  cflags = -Ofast -flto -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer $(config base.base_cflags)
  ldflags = -Ofast -flto -fwhole-program -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer
