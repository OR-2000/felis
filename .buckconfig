[parser]
  polyglot_parsing_enabled = true
  default_build_file_syntax = SKYLARK

[alias]
  db = //:db#debug
  db_release = //:db#release
  test = //:dbtest#debug

[cxx]
  cflags = -pthread -Wstrict-aliasing -DCACHE_LINE_SIZE=64 -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer

[cxx#debug]
  cxxflags = -g -O0 -fstandalone-debug -std=c++17
  cflags = -g -O0 -fstandalone-debug
  ldflags = -g -O0 -fstandalone-debug

[cxx#release]
  cxxflags = -Ofast -flto -std=c++17
  cflags = -Ofast -flto
  ldflags = -Ofast -flto
